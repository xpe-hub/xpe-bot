{
  "name": "xpe-bot-panel",
  "version": "1.0.0",
  "description": "Panel de control para XPE-BOT - Dise√±o K-VRC Inspired",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --portable",
    "build-nsis": "electron-builder --win --x64"
  },
  "author": "XPE-TEAM",
  "license": "MIT",
  "devDependencies": {
    "electron": "25.8.0",
    "electron-builder": "24.9.1"
  },
  "dependencies": {
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.xpeteam.xpebotpanel",
    "productName": "XPE-BOT Panel",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/k-vrc-avatar.png",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "XPE-BOT-Panel-Setup.exe"
    },
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*",
      "!backups/*",
      "!.git/*"
    ],
    "asar": true,
    "extraResources": []
  }
}
