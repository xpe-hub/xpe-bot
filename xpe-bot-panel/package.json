{
  "name": "xpe-bot-panel",
  "version": "2.0.0",
  "description": "Panel de control para XPE-BOT con Editor IA",
  "main": "src/main.js",
  "scripts": {
    "start": "set ELECTRON_DISABLE_SANDBOX=1 && set ELECTRON_DISABLE_GPU=1 && electron . --disable-gpu --disable-software-rasterizer --disable-dev-shm-usage",
    "build": "electron-builder --win --x64"
  },
  "author": "XPE-TEAM",
  "license": "MIT",
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.xpeteam.xpebotpanel",
    "productName": "XPE-BOT Panel",
    "win": { "target": "nsis", "icon": "assets/icon.ico" },
    "nsis": { "oneClick": false, "allowToChangeInstallationDirectory": true }
  }
}
